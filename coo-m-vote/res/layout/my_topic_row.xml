<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_my_topic_icon"
        style="@style/tv_command_row"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_blank"
        android:gravity="left|center_vertical"
        android:src="@drawable/ic_logo1" />

    <RelativeLayout
        style="@style/listview_adapter_common"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_my_topic_icon" >

        <TextView
            android:id="@+id/tv_my_topic_title"
            style="@style/tv_command_row"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:gravity="left" />

        <LinearLayout
            android:id="@+id/ll_topic_row"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_my_topic_title"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/tv_my_topic_vote"
                style="@style/tv_common_small"
                android:layout_width="0dip"
                android:layout_weight="2"
                android:gravity="left|center_vertical" />

            <TextView
                android:id="@+id/tv_my_topic_createtime"
                style="@style/tv_common_small"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:gravity="right|center_vertical" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>