<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_common" >

    <!-- 用于投票的侧滑框显示 -->

    <TextView
        android:id="@+id/tv_inc_topic_vote_title"
        style="@style/tv_common"
         android:layout_height="60dp"
        android:gravity="top"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <View style="@style/view_space" />

    <ListView
        android:id="@+id/lv_inc_topic_vote_legs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" />

    <View style="@style/view_space" />

    <Button
        android:id="@+id/btn_topic_vote"
        style="@style/btn_common"
        android:layout_width="match_parent"
        android:text="@string/app_vote" />

</LinearLayout>