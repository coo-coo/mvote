<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_common" >

    <!-- 用于投票的侧滑框显示 -->

    <TextView
        android:id="@+id/tv_inc_topic_result_title"
        style="@style/tv_common"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="top"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <View style="@style/view_space" />

    <com.kingstar.ngbf.ms.mpchart.CommonPieChart
        android:id="@+id/cpc_inc_topic_result"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <com.kingstar.ngbf.ms.mpchart.CommonBarChart
        android:id="@+id/cbc_inc_topic_result"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <!--
