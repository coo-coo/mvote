<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_adapter_common">

    <TextView
        android:id="@+id/tv_topic_create_leg_index"
        style="@style/tv_common"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="@string/tv_topic_create_leg_index" />

    <EditText
        android:id="@+id/et_topic_create_leg_content"
        style="@style/tv_common"
        android:layout_width="0dip"
        android:gravity="left"
        android:layout_weight="7"
        android:hint="@string/et_topic_create_leg_content_hint" />

    <Button
        android:id="@+id/btn_topic_create_leg_delete"
        style="@style/btn_common"
        android:layout_width="0dip"
        android:layout_weight="2"
        android:text="@string/topic_create_leg_delete" />

</LinearLayout>