<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_common" >

    <RelativeLayout style="@style/listview_adapter_common">

        <ImageView
            android:id="@+id/iv_sys_profile_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:contentDescription="@string/app_blank"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            style="@style/listview_adapter_common"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/iv_sys_profile_account"
                style="@style/tv_common_small" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_sys_profile"
        style="@style/listview_common" />

</LinearLayout>