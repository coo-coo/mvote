<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_adapter_common" >

    <ImageView
        android:id="@+id/tv_phone_row_icon"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_blank"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/tv_phone_row_name"
        style="@style/tv_command_row"
        android:layout_width="0dip"
        android:layout_weight="3"
        android:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/tv_phone_row_mobile"
        style="@style/tv_common_row"
        android:layout_width="0dip"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="3" />

</LinearLayout>